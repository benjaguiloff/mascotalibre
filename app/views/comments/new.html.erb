
<div class="container" style="width:65%; border-style:solid; border-width:15px; border-color: white; border-radius:5%; background-color: #1F2833;">
  <div>
    <h1 style="color:white;"><strong>Escribir comentario</strong></h1>
  </div>
  <%= form_with(model: @comment, method: :post) do |form| %>
    <%= form.hidden_field :publication_id, :publication_id => @comment.publication_id %>

      <div class="field" style="margin-top: 5px; margin-left: auto; margin-right: auto; text-align: center;">
        <h3 style="color:white;">Escribe el comentario:<br /></h3>
        <%= form.text_field :contents %>
      </div>

    <div class="actions" style="margin-bottom: 10px; margin-top: 5px; margin-left: auto; margin-right: auto; width:70%; text-align: center;">
      <%= form.submit "Crear comentario" %>
    </div>

    <div style="margin-bottom: 10px; margin-top: 5px; margin-left: auto; margin-right: auto; width:70%; text-align: center;">
      <%= link_to 'Cancelar', "/" %>
    </div>

  <% end %>