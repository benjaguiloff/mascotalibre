<div class="container" style="text-align:center; width:65%; border-style:solid; border-width:15px; border-color: white; border-radius:5%; background-color: #1F2833;">
    <h1 style="color:white">Nueva Reseña</h1>
    <%= form_with(model: @review, method: :post) do |form| %>

        <%= form.hidden_field :id_reviewed, :id_reviewed => @review.id_reviewed %>
        <%= form.hidden_field :id_user, :id_user => current_user.id %>

        <div class="field">
            <h4 style="color:white">Escribe tu reseña:</h4>
            <%= form.text_field :content %>
        </div>

        <div class="field" style=" margin-left: auto; margin-right: auto; text-align: center;">
            <table style=" margin-left: auto; margin-right: auto; text-align: center;">
                <thead>
                    <tr>
                        <th style="margin-left: auto; margin-right: auto; text-align: center; color:white"> 1 </th>
                        <th style="margin-left: auto; margin-right: auto; text-align: center; color:white"> 2 </th>
                        <th style="margin-left: auto; margin-right: auto; text-align: center; color:white"> 3 </th>
                        <th style="margin-left: auto; margin-right: auto; text-align: center; color:white"> 4 </th>
                        <th style="margin-left: auto; margin-right: auto; text-align: center; color:white"> 5 </th>
                    </tr>
                </thead>

                <tbody>
                    <tr>
                    
                        <td> <button type="button" class="btn btn-default btn-lg"> <span class="glyphicon glyphicon-star" aria-hidden="true"></span> <%= form.radio_button :rating, 1 %> </button> </td>
                        <td> <button type="button" class="btn btn-default btn-lg"> <span class="glyphicon glyphicon-star" aria-hidden="true"></span> <%= form.radio_button :rating, 2 %> </button> </td>
                        <td> <button type="button" class="btn btn-default btn-lg"> <span class="glyphicon glyphicon-star" aria-hidden="true"></span> <%= form.radio_button :rating, 3 %> </button> </td>
                        <td> <button type="button" class="btn btn-default btn-lg"> <span class="glyphicon glyphicon-star" aria-hidden="true"></span> <%= form.radio_button :rating, 4 %> </button> </td>
                        <td> <button type="button" class="btn btn-default btn-lg"> <span class="glyphicon glyphicon-star" aria-hidden="true"></span> <%= form.radio_button :rating, 5 %> </button> </td>
                    </tr>
                </tbody>
            </table>
        </div>

        <h4></h4>

        <div class="action">
            <%= form.submit "Crear reseña"%>
        </div>

    <% end %>
</div>