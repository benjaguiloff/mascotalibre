<h1>Mensajes</h1>

<p><%= notice %></p>
<h3>Mensajes recibidos</h3>
<table>
    <thead>
        <tr>
            <th>Enviado por:</th>
            <th>Mensaje</th>
        </tr>
    </thead>

    <tbody>
        <% @messages.each do |mensaje| %>
        <% if current_user.email == mensaje.email_receptor %>
            <tr>
                <td><%= mensaje.email_emisor %></td>
                <td><%= mensaje.body %></td>
                <td><%= link_to 'Responder', messages_new_path %></td>
            </tr>
        <% end %>   
        <% end %>
    </tbody>
</table>
