<h1>Editar Mensaje</h1>

<%= form_with(model: @message, method: :patch, url: messages_update_path) do |form| %>
    <div class="field">
    <%= form.label :enviar_a %><br />
    <%= form.collection_select :email_receptor, User.all, :email, :email %>
  </div>

 <div class="field">
    <%= form.label :enviado_por %><br />
    <%= form.collection_select :email_emisor, User.all, :email, :email %>
  </div>

  <div class="field">
    <%= form.label :mensaje %><br />
    <%= form.text_field :body, autocomplete: "body" %>
  </div>
  <div class="action">
  <%= form.submit "Editar mensaje"%>
<% end %>
<%= link_to 'Volver', messages_show_path(@message.id) %>